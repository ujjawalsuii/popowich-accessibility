{
  "manifest_version": 3,
  "name": "ScreenShield",
  "version": "1.0.0",
  "description": "Dyslexia reading view + seizure-safe harm reduction. Your accessibility layer.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.svg",
      "48": "assets/icons/icon48.svg",
      "128": "assets/icons/icon128.svg"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.svg",
    "48": "assets/icons/icon48.svg",
    "128": "assets/icons/icon128.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/browser-polyfill.js",
        "content/contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/fonts/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "screenshield@hackathon.dev",
      "strict_min_version": "109.0"
    }
  }
}